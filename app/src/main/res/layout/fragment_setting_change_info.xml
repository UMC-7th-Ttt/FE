<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/setting_change_info_back"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_prev_arrow"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/setting_change_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 정보 변경"
        android:textSize="20sp"
        android:textColor="@color/colorLabelNormal"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/mypage_setting_bar"
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryNormal"
        android:layout_marginTop="48dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_change_info_tv"
        app:layout_constraintStart_toStartOf="parent"
        />



    <LinearLayout
        android:id="@+id/change_info_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/mypage_setting_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인 정보"
                android:textSize="16sp"
                android:textColor="@color/colorLabelNormal"
                android:fontFamily="@font/pretendard_medium"
                android:paddingVertical="18dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="umcpado7@gmail.com"
                android:textSize="11sp"
                android:gravity="end"
                android:layout_weight="1"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/colorLabelNeutral"/>

        </LinearLayout>



        <TextView
            android:id="@+id/alarm_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림 설정"
            android:textSize="16sp"
            android:textColor="@color/colorLabelNormal"
            android:fontFamily="@font/pretendard_medium"
            android:paddingVertical="18dp"/>

        <TextView
            android:id="@+id/logout_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:textSize="16sp"
            android:textColor="@color/colorLabelNormal"
            android:fontFamily="@font/pretendard_medium"
            android:paddingVertical="18dp"/>

        <TextView
            android:id="@+id/membership_withdraw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원탈퇴"
            android:textSize="16sp"
            android:textColor="@color/colorLabelAlternative"
            android:fontFamily="@font/pretendard_medium"
            android:paddingVertical="18dp"/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>