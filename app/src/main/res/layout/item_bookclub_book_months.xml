<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/bookclub_month_cardview"
        android:layout_width="142dp"
        android:layout_height="198dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/bookclub_month_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_book_cover1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        <ImageView
            android:id="@+id/background_iv"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:background="#66141414"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소설 보다 가을"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/white"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="26dp"
        android:maxWidth="128dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="@+id/bookclub_month_cardview"
        app:layout_constraintStart_toStartOf="@+id/bookclub_month_cardview"/>

    <TextView
        android:id="@+id/author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한강 시집"
        android:textSize="11sp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/white"
        android:maxWidth="128dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"
        app:layout_constraintStart_toStartOf="@+id/title_tv"/>


</androidx.constraintlayout.widget.ConstraintLayout>