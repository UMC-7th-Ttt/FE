<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="6dp"
    android:paddingBottom="44dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/mypage_scrap_detail_cardview"
        android:layout_width="98dp"
        android:layout_height="152dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/mypage_scrap_detail_book_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_review_book3"
            android:scaleType="fitXY"
            android:background="@color/myPageScrapBg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/check_over"
        android:layout_width="98dp"
        android:layout_height="152dp"
        android:src="@drawable/ic_check"
        android:background="@drawable/white_rec_border_radius_5"
        android:elevation="2dp"
        android:scaleType="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/mypage_scrap_detail_cardview"
        app:layout_constraintStart_toStartOf="@+id/mypage_scrap_detail_cardview"/>

</androidx.constraintlayout.widget.ConstraintLayout>


