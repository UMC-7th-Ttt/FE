<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F10"
    android:padding="16dp">

    <!-- 툴바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0F0F10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 뒤로가기 버튼 -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_prev_arrow"
            android:contentDescription="뒤로가기"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 제목 -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공간별점 기록"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#0F0F10"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="100dp" />
    </androidx.appcompat.widget.Toolbar>

    <!-- 공간 이미지 -->
    <ImageView
        android:id="@+id/place_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/image_place"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <!-- 공간 제목 -->
    <TextView
        android:id="@+id/place_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="공간 이름"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/place_image"
        app:layout_constraintStart_toStartOf="@+id/place_image"
        app:layout_constraintTop_toBottomOf="@id/place_image" />

    <!-- 별점 표시 -->
    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:numStars="5"
        android:rating="0.0"
        android:stepSize="0.5"
        android:theme="@style/Base.Widget.AppCompat.RatingBar"
        app:layout_constraintEnd_toEndOf="@+id/place_title"
        app:layout_constraintStart_toStartOf="@+id/place_title"
        app:layout_constraintTop_toBottomOf="@id/place_title" />

    <!-- 별점 숫자 입력 (EditText) -->
    <EditText
        android:id="@+id/rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:maxLines="1"
        android:text="0.0"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/rating_bar"
        app:layout_constraintStart_toStartOf="@+id/rating_bar"
        app:layout_constraintTop_toBottomOf="@id/rating_bar" />

    <!-- 완료 버튼 -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@color/gray_01"
        android:enabled="false"
        android:text="완료"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/rating_text"
        app:layout_constraintStart_toStartOf="@+id/rating_text"
        app:layout_constraintTop_toBottomOf="@id/rating_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
