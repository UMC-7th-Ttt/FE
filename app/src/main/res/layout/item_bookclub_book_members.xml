<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_bookclub_book_members_cover_img_cardview"
        android:layout_width="86dp"
        android:layout_height="86dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/item_bookclub_book_members_cover_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_bookclub_member"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_bookclub_book_member_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxWidth="86dp"
        android:text="주디"
        android:textColor="@color/colorLabelNormal"
        android:textSize="15sp"
        android:fontFamily="@font/pretendard_regular"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/item_bookclub_book_members_cover_img_cardview"
        app:layout_constraintTop_toBottomOf="@id/item_bookclub_book_members_cover_img_cardview"
        app:layout_constraintEnd_toEndOf="@+id/item_bookclub_book_members_cover_img_cardview"/>

</androidx.constraintlayout.widget.ConstraintLayout>