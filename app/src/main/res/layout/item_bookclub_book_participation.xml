<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_participant_cardView"
        android:layout_width="129dp"
        android:layout_height="197dp"
        app:cardCornerRadius="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/item_participant_back_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@color/colorLabelNormal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/item_participant_book_iv"
        android:layout_width="80dp"
        android:layout_height="109dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="27dp"
        android:background="@color/colorLabelAlternative"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="@id/item_participant_cardView"
        app:layout_constraintTop_toTopOf="@id/item_participant_cardView"
        app:layout_constraintEnd_toEndOf="@id/item_participant_cardView"/>

    <TextView
        android:id="@+id/item_participant_book_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="book"
        android:textColor="@color/black"
        android:layout_marginTop="77dp"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="@id/item_participant_cardView"
        app:layout_constraintStart_toStartOf="@id/item_participant_cardView"
        app:layout_constraintEnd_toEndOf="@id/item_participant_cardView"
        />

</androidx.constraintlayout.widget.ConstraintLayout>