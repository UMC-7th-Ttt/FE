<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorMainBg"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:id="@+id/item_linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginVertical="14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_person_icon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="오래된 책장"
                    android:textSize="12sp"
                    android:textColor="@color/colorLabelNeutral"
                    android:fontFamily="@font/pretendard_medium"/>

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_marginStart="6dp"
                    tools:text="4시간 전"
                    android:textSize="11sp"
                    android:textColor="#E0C2C4C8"
                    android:fontFamily="@font/pretendard_regular"/>

            </LinearLayout>

            <TextView
                android:id="@+id/content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="서평이 너무 인상 깊네요"
                android:textSize="11sp"
                android:textColor="@color/colorLabelNeutral"
                android:fontFamily="@font/pretendard_regular"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/like_ic_iv"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_like_on"
                    android:scaleType="center"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="좋아요 1"
                    android:textColor="@color/colorPrimaryNormal"
                    android:textSize="10dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:layout_marginStart="2dp"/>

                <ImageView
                    android:id="@+id/comment_ic_iv"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_comment"
                    android:scaleType="center"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/re_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="답글 쓰기"
                    android:textSize="10dp"
                    android:textColor="@color/colorLabelNeutral"
                    android:fontFamily="@font/pretendard_medium"
                    android:layout_marginStart="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/vertical_dot"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_vertical_dot"
            android:layout_gravity="end"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#28989BA2"
        tools:ignore="Suspicious0dp" />
</LinearLayout>