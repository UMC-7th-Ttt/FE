<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_prev_arrow"
        android:layout_marginTop="26dp"
        android:layout_marginStart="20dp"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/setting_change_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 설정"
        android:textSize="20sp"
        android:textColor="@color/colorLabelNormal"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/primary_line"
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryNormal"
        android:layout_marginTop="48dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_change_info_tv"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/activity_alarm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="활동 알림"
        android:textSize="16sp"
        android:textColor="@color/colorLabelNormal"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="44dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/primary_line"/>

    <TextView
        android:id="@+id/activity_alarm_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="북레터, 북클럽 등의 알림을 받아볼 수 있습니다.\n북클럽 인증 알림을 제공하오니, 알림 허용을 권장 드립니다."
        android:textSize="11sp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/colorLabelNeutral"
        app:layout_constraintTop_toBottomOf="@+id/activity_alarm_tv"
        app:layout_constraintStart_toStartOf="@+id/activity_alarm_tv"/>

    <ImageView
        android:id="@+id/activity_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_toggle_deactivate"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/activity_alarm_tv"
        app:layout_constraintBottom_toBottomOf="@+id/activity_alarm_description"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/marketing_alarm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마케팅 알림"
        android:textSize="16sp"
        android:textColor="@color/colorLabelNormal"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="@+id/activity_alarm_description"
        app:layout_constraintTop_toBottomOf="@+id/activity_alarm_description"/>

    <TextView
        android:id="@+id/marketing_alarm_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이벤트 소식 등의 마케팅 알림을 받아볼 수 있습니다"
        android:textSize="11sp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/colorLabelNeutral"
        app:layout_constraintStart_toStartOf="@+id/marketing_alarm_tv"
        app:layout_constraintTop_toBottomOf="@+id/marketing_alarm_tv"/>

    <ImageView
        android:id="@+id/marketing_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_toggle_activate"
        android:layout_marginEnd="20dp"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="@+id/marketing_alarm_tv"
        app:layout_constraintBottom_toBottomOf="@+id/marketing_alarm_description"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>