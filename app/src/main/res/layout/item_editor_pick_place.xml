<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:background="@color/black"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:id="@+id/item_editor_pick_place_iv"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_book_cover1"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/item_editor_pick_place_title_tv"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="공간 이름"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/item_editor_pick_place_iv"
        app:layout_constraintTop_toTopOf="@id/item_editor_pick_place_iv"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/item_editor_pick_category_tv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="저자명"
        android:textColor="@color/white_65"
        android:textSize="11sp"
        android:layout_marginTop="2dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/item_editor_pick_place_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_editor_pick_place_title_tv" />

    <TextView
        android:id="@+id/item_curation_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="큐레이션 한 마디"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/item_editor_pick_category_tv"
        app:layout_constraintTop_toBottomOf="@id/item_editor_pick_category_tv" />

    <ImageView
        android:id="@+id/item_bookmark_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_bookmark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_editor_pick_place_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_editor_pick_place_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>
