<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="11dp"
    android:paddingBottom="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_review_folder_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:rowCount="2"
            android:background="@color/colorMainBg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/scrap_folder_iv1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="center"
                android:adjustViewBounds="true"
                android:background="#252527"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"/>

            <ImageView
                android:id="@+id/scrap_folder_iv2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="center"
                android:adjustViewBounds="true"
                android:background="#252527"/>

            <ImageView
                android:id="@+id/scrap_folder_iv3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="center"
                android:adjustViewBounds="true"
                android:background="#252527"/>

            <ImageView
                android:id="@+id/scrap_folder_iv4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="center"
                android:adjustViewBounds="true"
                android:background="#252527"/>

        </androidx.gridlayout.widget.GridLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/folder_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도서"
        android:textColor="@color/colorLabelNormal"
        android:textSize="15sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/item_review_folder_cardview"
        app:layout_constraintStart_toStartOf="@+id/item_review_folder_cardview"
        app:layout_constraintEnd_toEndOf="@+id/item_review_folder_cardview"
        />

    <ImageView
        android:id="@+id/check_over"
        android:layout_width="161dp"
        android:layout_height="161dp"
        android:src="@drawable/ic_check"
        android:background="@drawable/white_rec_border_radius_8"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        android:padding="40dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/item_review_folder_cardview"
        app:layout_constraintStart_toStartOf="@+id/item_review_folder_cardview"/>




</androidx.constraintlayout.widget.ConstraintLayout>