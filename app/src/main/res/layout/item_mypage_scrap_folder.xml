<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="11dp"
    android:paddingBottom="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_review_folder_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:rowCount="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/item_scrap_plus_back_iv1"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:scaleType="center"
                android:background="@drawable/img_mypage_scrap_book1"/>

            <ImageView
                android:id="@+id/item_scrap_plus_back_iv2"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:scaleType="center"
                android:background="@drawable/img_mypage_scrap_book3"/>

            <ImageView
                android:id="@+id/item_scrap_plus_back_iv3"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:scaleType="center"
                android:background="@drawable/img_mypage_scrap_book2"/>

            <ImageView
                android:id="@+id/item_scrap_plus_back_iv4"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:scaleType="center"
                android:background="@drawable/img_mypage_scrap_book4"/>

        </androidx.gridlayout.widget.GridLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도서"
        android:textColor="@color/colorLabelNormal"
        android:textSize="15sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/item_review_folder_cardview"
        app:layout_constraintStart_toStartOf="@+id/item_review_folder_cardview"
        app:layout_constraintEnd_toEndOf="@+id/item_review_folder_cardview"
        />




</androidx.constraintlayout.widget.ConstraintLayout>