<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/gradient_bg_2">

    <!-- 제목 -->
    <TextView
        android:id="@+id/reminder_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리마인드 2024"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 부제목 -->
    <TextView
        android:id="@+id/reminder_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ttt.에서의 추억을 떠올려봐요!"
        android:textSize="14sp"
        android:textColor="#B3B3B3"
        app:layout_constraintTop_toBottomOf="@id/reminder_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- 첫 번째 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_1"
        android:layout_width="170dp"
        android:layout_height="210dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/reminder_subtitle"
        app:layout_constraintStart_toStartOf="@id/reminder_subtitle"
        app:layout_constraintEnd_toEndOf="@id/reminder_subtitle"
        android:layout_marginTop="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/card_1_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@drawable/img_book_cover7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintDimensionRatio="2:3"/>


            <View
                android:id="@+id/book_blur_overlay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@drawable/blur_effect_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/card_1_title"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="소설 보다 가을"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingStart="8dp"
                android:paddingTop="10dp"
                app:layout_constraintTop_toTopOf="@id/book_blur_overlay"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/card_1_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#BFFFFFFF"
                android:padding="4dp"
                android:text="DEC\n21"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="8dp" />

            <TextView
                android:id="@+id/card_1_description"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="한강 시집"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/card_1_title"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- 두 번째 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_2"
        android:layout_width="170dp"
        android:layout_height="210dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/card_1"
        app:layout_constraintStart_toEndOf="@id/card_1"
        app:layout_constraintBottom_toBottomOf="@id/card_1"
        android:layout_marginStart="30dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/card_2_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@drawable/img_book_cover7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintDimensionRatio="2:3"/>
            <TextView
                android:id="@+id/card_2_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#BFFFFFFF"
                android:padding="4dp"
                android:text="DEC\n21"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="8dp" />


            <View
                android:id="@+id/book_blur_overlay2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@drawable/blur_effect_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/card_2_title"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="소설 보다 가을"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingStart="8dp"
                android:paddingTop="10dp"
                app:layout_constraintTop_toTopOf="@id/book_blur_overlay2"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/card_2_description"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="한강 시집"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/card_2_title"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
