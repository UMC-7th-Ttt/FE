<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/primary_btn_bg"
    android:backgroundTint="#212225"
    android:paddingVertical="10dp"
    android:paddingStart="11dp"
    android:paddingEnd="122dp"
    android:layout_marginHorizontal="18dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/toast_book_cover_cardview"
        android:layout_width="28dp"
        android:layout_height="33dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/toast_book_cover_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_bookclub_book_1" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/toast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="가입이 완료되었습니다!"
        android:textColor="@color/colorLabelNormal"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/toast_book_cover_cardview"
        app:layout_constraintStart_toEndOf="@+id/toast_book_cover_cardview"
        app:layout_constraintTop_toTopOf="@+id/toast_book_cover_cardview" />

</androidx.constraintlayout.widget.ConstraintLayout>
