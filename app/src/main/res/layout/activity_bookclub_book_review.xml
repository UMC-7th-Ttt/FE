<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorMainBg"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="100dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="54dp"
                android:scaleType="center"
                android:src="@drawable/ic_prev_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bookclub_review_person_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/circle_background"
                android:clipToOutline="true"
                android:src="@drawable/img_person_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back_btn" />

            <TextView
                android:id="@+id/bookclub_review_person_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="파도"
                android:textColor="@color/colorLabelNormal"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/bookclub_review_person_iv"
                app:layout_constraintStart_toStartOf="@+id/bookclub_review_person_iv"
                app:layout_constraintTop_toBottomOf="@+id/bookclub_review_person_iv" />

            <ImageView
                android:id="@+id/bookclub_review_page_line_iv"
                android:layout_width="30dp"
                android:layout_height="2.5dp"
                android:layout_marginEnd="20dp"
                android:background="@color/colorPrimaryNormal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bookclub_review_person_iv" />

            <TextView
                android:id="@+id/bookclub_review_page_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="2\n0\n0"
                android:textColor="@color/colorPrimaryNormal"
                android:textSize="14sp"
                android:lineHeight="20sp"
                app:layout_constraintEnd_toEndOf="@+id/bookclub_review_page_line_iv"
                app:layout_constraintStart_toStartOf="@+id/bookclub_review_page_line_iv"
                app:layout_constraintTop_toBottomOf="@+id/bookclub_review_page_line_iv" />

            <ImageView
                android:id="@+id/bookclub_review_line_iv"
                android:layout_width="30dp"
                android:layout_height="2.5dp"
                android:layout_marginTop="53dp"
                android:background="@color/colorPrimaryNormal"
                app:layout_constraintStart_toStartOf="@+id/bookclub_review_person_iv"
                app:layout_constraintTop_toBottomOf="@+id/bookclub_review_person_tv" />

            <ImageView
                android:id="@+id/bookclub_review_photo_iv"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/img_bookclub_review_photo"
                app:layout_constraintStart_toStartOf="@+id/bookclub_review_person_iv"
                app:layout_constraintTop_toBottomOf="@+id/bookclub_review_line_iv" />

            <TextView
                android:id="@+id/bookclub_review_main_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineHeight="22sp"
                android:textSize="14sp"
                android:textColor="@color/colorLabelNormal"
                android:text="📖 억압을 벗어나기 위한 고독한 몸부림"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="33dp"
                app:layout_constraintTop_toBottomOf="@+id/bookclub_review_photo_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/bookclub_review_main_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineHeight="22sp"
                android:textSize="14sp"
                android:textColor="@color/colorLabelNormal"
                android:text="한강의 『채식주의자』를 읽으며 묘한 감정에 휩싸였다. 영혜가 고기를 거부하는 순간부터 그녀의 삶은 통제에서 벗어나려는 몸부림처럼 느껴졌고, 그 과정에서 드러나는 가족의 폭력성과 사회의 억압은 답답함과 불편함을 줬다. 하지만 그런 불편함 속에서 인간 본능과 욕망, 그리고 타인과의 경계에 대해 생각해보게 되었다. 영혜의 선택이 이해되지 않을 때도 있었지만, 어쩌면 그녀가 그토록 추구했던 자유가 무엇인지 나도 궁금해졌다. 읽고 난 후에도 쉽게 정리되지 않는, 여운이 오래 남는 책이었다."
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/bookclub_review_main_title_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/upper_comment_border_iv"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#2937383C"
                android:layout_marginTop="44dp"
                app:layout_constraintTop_toBottomOf="@+id/bookclub_review_main_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/comment_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글 2"
                android:textSize="15sp"
                android:textColor="@color/colorLabelNeutral"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@+id/upper_comment_border_iv"
                app:layout_constraintStart_toStartOf="@+id/bookclub_review_main_tv"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMainBg"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@+id/comment_count_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/item_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:background="@drawable/circle_background"
                        android:clipToOutline="true"
                        android:src="@drawable/img_person_icon"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="오래된 책장"
                                android:textSize="12sp"
                                android:textColor="@color/colorLabelNeutral"
                                android:fontFamily="@font/pretendard_medium"/>

                            <TextView
                                android:id="@+id/time_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:lines="1"
                                android:layout_marginStart="6dp"
                                tools:text="4시간 전"
                                android:textSize="11sp"
                                android:textColor="@color/colorLabelNeutral"
                                android:fontFamily="@font/pretendard_regular"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="서평이 너무 인상 깊네요"
                            android:textSize="11sp"
                            android:textColor="@color/colorLabelNeutral"
                            android:fontFamily="@font/pretendard_regular"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <ImageView
                                android:id="@+id/like_ic_iv"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_filled_heart"
                                android:scaleType="center"
                                />

                            <TextView
                                android:id="@+id/like_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:text="좋아요 1"
                                android:textColor="@color/colorPrimaryNormal"
                                android:textSize="10dp"
                                android:fontFamily="@font/pretendard_medium"
                                android:layout_marginStart="2dp"/>

                            <ImageView
                                android:id="@+id/comment_ic_iv"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_comment"
                                android:scaleType="center"
                                android:layout_marginStart="10dp"
                                />

                            <TextView
                                android:id="@+id/re_comment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="답글 쓰기"
                                android:textSize="10dp"
                                android:textColor="@color/colorLabelNeutral"
                                android:fontFamily="@font/pretendard_medium"
                                android:layout_marginStart="2dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/vertical_dot"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_vertical_dot"
                        android:layout_gravity="end" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <ImageView
        android:id="@+id/floating_commnet_bg"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="@color/colorMainBg"
        android:layout_alignParentBottom="true"
        />

    <EditText
        android:id="@+id/floating_comment_edit_text"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="댓글을 입력해주세요"
        android:textColor="@color/colorLabelAlternative"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_regular"
        android:background="@drawable/edit_text_radius_30"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="53dp"
        android:paddingStart="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/floating_comment_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_send"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="16dp"/>


</RelativeLayout>
