<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <!-- 첫 번째 카드 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_1"
            android:layout_width="171dp"
            android:layout_height="216dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/card_1_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:background="@drawable/img_book_cover7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintDimensionRatio="2:3"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F7F7F8"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/card_1_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEC"
                        android:textColor="@color/black"
                        android:fontFamily="@font/pretendard_regular"
                        android:textSize="9sp"
                        android:layout_marginTop="6dp"
                        android:layout_gravity="center|top"
                        android:layout_marginHorizontal="11dp"/>

                    <TextView
                        android:id="@+id/card_1_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="21"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/pretendard_bold"
                        android:layout_gravity="center|bottom"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="3dp"/>
                </androidx.cardview.widget.CardView>


                <View
                    android:id="@+id/book_blur_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="bottom"
                    android:background="#66141414"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/card_1_title"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="소설 보다 가을"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="@id/book_blur_overlay"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/card_1_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내가 원래 이렇게 편협한 사람이었나 하는 생각이 든다..."
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="11dp"
                    app:layout_constraintTop_toBottomOf="@id/card_1_title"
                    app:layout_constraintBottom_toBottomOf="@+id/book_blur_overlay"
                    app:layout_constraintStart_toStartOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>