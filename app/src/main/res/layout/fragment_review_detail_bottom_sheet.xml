<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="31dp"
    android:background="@drawable/background_bottom_sheet">

    <ImageView
        android:id="@+id/edit_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_pencil_blank"
        android:scaleType="center"
        android:layout_marginTop="23dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정하기"
        android:textSize="16sp"
        android:textColor="#F7F7F8"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/edit_iv"
        app:layout_constraintTop_toTopOf="@+id/edit_iv"
        app:layout_constraintBottom_toBottomOf="@+id/edit_iv"/>

    <ImageView
        android:id="@+id/delete_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_trash_can"
        android:scaleType="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제하기"
        android:textSize="16sp"
        android:textColor="#FF6363"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/delete_iv"
        app:layout_constraintTop_toTopOf="@+id/delete_iv"
        app:layout_constraintBottom_toBottomOf="@+id/delete_iv"/>

    <ImageView
        android:id="@+id/cancel_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_x"
        android:scaleType="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/delete_iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/cancel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="16sp"
        android:textColor="#F7F7F8"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/cancel_iv"
        app:layout_constraintTop_toTopOf="@+id/cancel_iv"
        app:layout_constraintBottom_toBottomOf="@+id/cancel_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>
