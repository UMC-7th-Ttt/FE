<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mypage_setting_back"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_primary_back"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/mypage_setting_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="20sp"
        android:textColor="@color/colorLabelNormal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/mypage_setting_bar1"
        android:layout_width="32dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryNormal"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/mypage_setting_idcard_iv"
        app:layout_constraintEnd_toEndOf="@+id/mypage_setting_idcard_iv"/>

    <ImageView
        android:id="@+id/mypage_setting_idcard_iv"
        android:layout_width="150dp"
        android:layout_height="194dp"
        android:src="@drawable/img_review_book1"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="23dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/mypage_setting_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/mypage_setting_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="파도"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryNormal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/mypage_setting_idcard_iv"
        app:layout_constraintEnd_toEndOf="@+id/mypage_setting_idcard_iv"/>

    <ImageView
        android:id="@+id/mypage_setting_bar2"
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryNormal"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/mypage_setting_nickname_tv"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/mypage_setting_detail_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 변경"
        android:textSize="16sp"
        android:textColor="@color/colorLabelNormal"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/mypage_setting_bar2"
        app:layout_constraintStart_toStartOf="@+id/mypage_setting_bar2"/>

    <TextView
        android:id="@+id/mypage_setting_detail_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 정보 변경"
        android:textSize="16sp"
        android:textColor="@color/colorLabelNormal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/mypage_setting_detail_tv1"
        app:layout_constraintStart_toStartOf="@+id/mypage_setting_bar2"/>

    <TextView
        android:id="@+id/mypage_setting_detail_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테마 변경"
        android:textSize="16sp"
        android:textColor="@color/colorLabelNormal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/mypage_setting_detail_tv2"
        app:layout_constraintStart_toStartOf="@+id/mypage_setting_bar2"/>

    <TextView
        android:id="@+id/mypage_setting_detail_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고객센터"
        android:textSize="16sp"
        android:textColor="@color/colorLabelNormal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/mypage_setting_detail_tv3"
        app:layout_constraintStart_toStartOf="@+id/mypage_setting_bar2"/>



</androidx.constraintlayout.widget.ConstraintLayout>