<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/widget_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="21dp"
    android:background="@drawable/blindbook_widget_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="오늘도 책을 펼쳐볼까요?"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="27dp"
            android:layout_height="13dp"
            android:background="@drawable/img_ttt_logo"
            android:layout_gravity="center"/>


    </LinearLayout>

    <TextView
        android:id="@+id/widget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이상하지 눈은, 들릴 듯 말 듣 한 소리로 인선이 말했다. 어떻게 하늘에서 저런 게 내려오지 마치 세상이 끝난 뒤의 침묵 같았지..."
        android:textSize="13sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintTop_toBottomOf="@+id/widget_title"
        app:layout_constraintStart_toStartOf="@+id/widget_title"
        android:layout_marginTop="8dp"/>


</LinearLayout>