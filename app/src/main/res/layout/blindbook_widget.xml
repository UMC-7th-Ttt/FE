<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="21dp"
    android:background="@color/colorMainBg">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘도 책을 펼쳐볼까요?"
        android:textSize="15sp"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <ImageView
        android:layout_width="27dp"
        android:layout_height="13dp"
        android:background="@drawable/img_ttt_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    
    <ImageView
        android:layout_width="85dp"
        android:layout_height="69dp"
        android:background="@drawable/img_green_blur_bg"
        android:scaleType="centerCrop"
        android:elevation="10dp"
        android:layout_marginTop="-6dp"
        android:layout_marginStart="23dp"
        app:layout_constraintTop_toTopOf="@+id/widget_text"
        app:layout_constraintBottom_toBottomOf="@+id/widget_text"
        app:layout_constraintStart_toStartOf="@+id/widget_text"/>

    <TextView
        android:id="@+id/widget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이상하지 눈은, 들릴 듯 말 듣 한 소리로 인선이 말했다. 어떻게 하늘에서 저런 게 내려오지 마치 세상이 끝난 뒤의 침묵 같았지..."
        android:textSize="13sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintTop_toBottomOf="@+id/widget_title"
        app:layout_constraintStart_toStartOf="@+id/widget_title"
        android:layout_marginTop="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>