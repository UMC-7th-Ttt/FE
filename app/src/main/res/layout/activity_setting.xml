<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fragment_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_prev_arrow"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/mypage_setting_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="20sp"
        android:textColor="@color/colorLabelNormal"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/mypage_setting_idcard_iv"
        android:layout_width="310dp"
        android:layout_height="206dp"
        android:src="@drawable/img_membership_card"
        android:layout_marginTop="49dp"
        android:scaleType="center"
        app:layout_constraintTop_toBottomOf="@+id/mypage_setting_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/mypage_setting_bar"
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryNormal"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/mypage_setting_idcard_iv"
        app:layout_constraintStart_toStartOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/mypage_setting_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/mypage_setting_detail_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 변경"
            android:textSize="16sp"
            android:textColor="@color/colorLabelNormal"
            android:fontFamily="@font/pretendard_medium"
            android:paddingVertical="12dp"/>

        <TextView
            android:id="@+id/mypage_setting_detail_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 정보 변경"
            android:textSize="16sp"
            android:textColor="@color/colorLabelNormal"
            android:fontFamily="@font/pretendard_medium"
            android:paddingVertical="12dp"/>

        <TextView
            android:id="@+id/mypage_setting_detail_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테마 변경"
            android:textSize="16sp"
            android:textColor="@color/colorLabelNormal"
            android:fontFamily="@font/pretendard_medium"
            android:paddingVertical="12dp"/>

        <TextView
            android:id="@+id/mypage_setting_detail_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고객센터"
            android:textSize="16sp"
            android:textColor="@color/colorLabelNormal"
            android:fontFamily="@font/pretendard_medium"
            android:paddingVertical="12dp"/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>