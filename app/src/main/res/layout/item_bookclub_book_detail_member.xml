<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_bookclub_book_detail_members_back_iv"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:scaleType="fitCenter"
        android:background="@drawable/bookclub_member_active_bg"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_bookclub_book_detail_members_img_iv"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:scaleType="fitCenter"
        android:background="@drawable/bookclub_detail_member_bg"
        android:src="@drawable/img_bookclub_detail_member1"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="@id/item_bookclub_book_detail_members_back_iv"
        app:layout_constraintTop_toTopOf="@id/item_bookclub_book_detail_members_back_iv"
        app:layout_constraintEnd_toEndOf="@+id/item_bookclub_book_detail_members_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_bookclub_book_detail_members_back_iv"/>


    <TextView
        android:id="@+id/item_bookclub_book_detail_members_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxWidth="86dp"
        android:text="주디"
        android:textColor="@color/colorLabelNormal"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/item_bookclub_book_detail_members_back_iv"
        app:layout_constraintTop_toBottomOf="@id/item_bookclub_book_detail_members_back_iv"
        app:layout_constraintEnd_toEndOf="@+id/item_bookclub_book_detail_members_back_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>