<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:background="@color/black"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:id="@+id/item_search_result_book_cover_iv"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_book_cover1"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/item_search_result_book_title_tv"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="책 제목"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/item_search_result_book_cover_iv"
        app:layout_constraintTop_toTopOf="@id/item_search_result_book_cover_iv"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/item_search_result_book_author_tv"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="작가"
        android:textSize="13sp"
        android:textColor="@color/gray_01"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/item_search_result_book_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_search_result_book_title_tv" />

    <TextView
        android:id="@+id/item_search_result_book_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소설"
        android:textSize="11sp"
        android:textColor="@color/white_80"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/item_search_result_book_author_tv"
        app:layout_constraintStart_toStartOf="@id/item_search_result_book_author_tv"/>

    <ImageView
        android:id="@+id/small_bar_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_small_bar"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/item_search_result_book_category_tv"
        app:layout_constraintTop_toTopOf="@id/item_search_result_book_category_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_search_result_book_category_tv" />

    <TextView
        android:id="@+id/item_search_result_book_publisher_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="출판사"
        android:textSize="11sp"
        android:textColor="@color/white_80"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/small_bar_ic"
        app:layout_constraintTop_toTopOf="@+id/small_bar_ic"
        app:layout_constraintBottom_toBottomOf="@+id/small_bar_ic" />

    <ImageView
        android:id="@+id/item_bookmark_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_bookmark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_search_result_book_cover_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_search_result_book_cover_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>
