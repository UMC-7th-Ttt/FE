<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="#292A2d">

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_sheet_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/scrap_item_bottom_sheet_iv"
            android:layout_width="40dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_scrap_book" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/scrap_item_bottom_sheet_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="도서"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/bottom_sheet_card_view"
        app:layout_constraintTop_toTopOf="@+id/bottom_sheet_card_view"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_sheet_card_view" />

    <RadioButton
        android:id="@+id/scrap_bottom_sheet_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:buttonTint="@color/colorLabelNeutral"
        android:checked="false"
        app:layout_constraintTop_toTopOf="@id/scrap_item_bottom_sheet_title_tv"
        app:layout_constraintBottom_toBottomOf="@+id/scrap_item_bottom_sheet_title_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
