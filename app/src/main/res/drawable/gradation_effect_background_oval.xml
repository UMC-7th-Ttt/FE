<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 전체 타원형 배경 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#00000000"/> <!-- 투명 배경 -->
        </shape>
    </item>

    <!-- 위쪽 그라데이션 -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="#B3111111"
                android:centerColor="#00111111"
                android:endColor="#00000000"
                android:type="linear"/>
        </shape>
    </item>

    <!-- 아래쪽 그라데이션 -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:startColor="#CC2B2929"
                android:centerColor="#332B2929"
                android:endColor="#00000000"
                android:type="linear"/>
        </shape>
    </item>

</layer-list>

