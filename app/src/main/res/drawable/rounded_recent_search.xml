<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 배경 색상 -->
    <solid android:color="#47AEB0B6" />

    <!-- 테두리 색상과 두께 -->
    <stroke
        android:width="1dp"
        android:color="#47AEB0B6" />

    <!-- 모서리 둥글기 -->
    <corners android:radius="24dp" />

    <!-- 패딩 (내부 여백) -->
    <padding
        android:left="15dp"
        android:right="15dp"
        android:top="10dp"
        android:bottom="10dp" />

</shape>